# Multi-stage build for Quidditch Data Node
# Stage 1: Builder
FROM golang:1.26-alpine AS builder

# Install build dependencies
RUN apk add --no-cache git ca-certificates tzdata

# Set working directory
WORKDIR /build

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY cmd/ ./cmd/
COPY pkg/ ./pkg/

# Build arguments for version information
ARG VERSION=dev
ARG BUILD_DATE
ARG VCS_REF

# Build the binary
RUN CGO_ENABLED=0 GOOS=linux GOARCH=${TARGETARCH:-amd64} \
    go build -a -installsuffix cgo \
    -ldflags="-w -s -X main.version=${VERSION} -X main.commit=${VCS_REF} -X main.date=${BUILD_DATE}" \
    -o quidditch-data \
    ./cmd/data

# Stage 2: Runtime
FROM alpine:3.19

# Add metadata labels
LABEL org.opencontainers.image.title="Quidditch Data Node"
LABEL org.opencontainers.image.description="Distributed search engine data node with Diagon backend"
LABEL org.opencontainers.image.version="${VERSION}"
LABEL org.opencontainers.image.created="${BUILD_DATE}"
LABEL org.opencontainers.image.revision="${VCS_REF}"
LABEL org.opencontainers.image.source="https://github.com/quidditch/quidditch"
LABEL org.opencontainers.image.vendor="Quidditch"

# Install runtime dependencies
RUN apk add --no-cache ca-certificates tzdata

# Create non-root user
RUN addgroup -g 1000 quidditch && \
    adduser -D -u 1000 -G quidditch quidditch

# Create data directory
RUN mkdir -p /data/shards && \
    chown -R quidditch:quidditch /data

# Copy binary from builder
COPY --from=builder /build/quidditch-data /usr/local/bin/quidditch-data

# Copy default configuration
COPY config/docker-data.yaml /etc/quidditch/data.yaml
RUN chown quidditch:quidditch /etc/quidditch/data.yaml

# Switch to non-root user
USER quidditch

# Set working directory
WORKDIR /data

# Expose ports
# 9303: gRPC API
EXPOSE 9303

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=20s --retries=3 \
    CMD ["/usr/local/bin/quidditch-data", "health"]

# Default command
ENTRYPOINT ["/usr/local/bin/quidditch-data"]
CMD ["--config", "/etc/quidditch/data.yaml"]
